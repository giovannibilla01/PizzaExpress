@model ProductListViewModel

<div>
    <h2>@Model.CurrentCategory</h2>
</div>
@ViewData["Date"]
<hr />
<div class="container">
    <div class="row">
        @foreach (var lanche in Model.Products)
        {
            <div class="col-sm-4 col-md-4 col-lg-4">
                <p><img class="img-fluid" src="@lanche.ImageUrl" /></p>
                <h3>@lanche.Name</h3>
                <h3>Preço : @lanche.Price.ToString("c")</h3>
                <p>@lanche.Description</p>
            </div>
        }
    </div>
</div>